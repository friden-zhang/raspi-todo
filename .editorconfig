# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.html]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.sh]
indent_size = 2

[*.{conf,nginx}]
indent_size = 4

[Dockerfile*]
indent_size = 4

[*.service]
indent_size = 4
